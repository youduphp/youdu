{
    "name": "youduphp/youdu",
    "description": "The PHP SDK for youdu.",
    "type": "library",
    "keywords": [
        "php",
        "youdu"
    ],
    "homepage": "https://github.com/youduphp/youdu",
    "license": "MIT",
    "authors": [{
        "name": "huangdijia",
        "email": "huangdijia@gmail.com"
    }],
    "require": {
        "php": ">=8.0",
        "guzzlehttp/guzzle": "^6.4|^7.0",
        "psr/simple-cache": "^1.0|^2.0|^3.0"
    },
    "require-dev": {
        "huangdijia/php-coding-standard": "^1.1",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^1.21|^2.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "files": [
            "src/Kernel/Utils/Functions.php"
        ],
        "psr-4": {
            "YouduPhp\\Youdu\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YouduPhp\\Youdu\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "@php vendor/bin/pest",
        "cs-fix": "@php vendor/bin/php-cs-fixer fix $1",
        "analyse": "@php vendor/bin/phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon "
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
